# Production Environment Configuration
# For running everything in containers
# Note: Override settings in your personal .env file

# === DISCORD BOT CONFIGURATION ===
# DISCORD_BOT_TOKEN= # Set in your personal .env file

# === AI PERSONALITY CONFIGURATION ===
# System Prompt File - Choose your AI's personality
# Default: Dream character (leave commented to use default)
# BOT_SYSTEM_PROMPT_FILE=./system_prompt.md

# Alternative personality templates (uncomment one to switch):
# BOT_SYSTEM_PROMPT_FILE=./config/system_prompts/professional_ai_template.md        # Business assistant
# BOT_SYSTEM_PROMPT_FILE=./config/system_prompts/empathetic_companion_template.md    # Supportive companion
# BOT_SYSTEM_PROMPT_FILE=./config/system_prompts/casual_friend_template.md          # Casual friend
# BOT_SYSTEM_PROMPT_FILE=./config/system_prompts/adaptive_ai_template.md            # Self-adapting AI

# LLM Configuration (Docker internal networking)
LLM_CHAT_API_URL=http://host.docker.internal:1234/v1
LLM_MODEL_NAME=mistralai/mistral-nemo-instruct-2407
LLM_EMOTION_MODEL_NAME=google/gemma-3n-e4b
LLM_FACTS_MODEL_NAME=google/gemma-3n-e4b

# API Keys for cloud providers (uncomment and configure if switching to cloud LLM)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# LLM_API_KEY=your_generic_api_key_here
# LLM_EMOTION_API_KEY=your_emotion_api_key_here
# LLM_FACTS_API_KEY=your_facts_api_key_here

# Embedding Configuration (optional - leave unset to use local ChromaDB embeddings)
# LLM_EMBEDDING_API_URL=http://host.docker.internal:1234/v1
# LLM_EMBEDDING_MODEL_NAME=text-embedding-nomic-embed-text-v1.5
# LLM_EMBEDDING_API_KEY=your_embedding_api_key_here

# External Embeddings Configuration
USE_EXTERNAL_EMBEDDINGS=true

# Redis Configuration (container to container communication)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# PostgreSQL Configuration (container to container communication)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=discord_bot
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=bot_password_change_me
POSTGRES_MIN_CONNECTIONS=5
POSTGRES_MAX_CONNECTIONS=20
USE_POSTGRES_PROFILES=true

# ChromaDB Configuration (container to container communication)
USE_CHROMADB_HTTP=true
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=user_memories
CHROMADB_GLOBAL_COLLECTION_NAME=global_facts

VOICE_SUPPORT_ENABLED=false
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Production settings
DEBUG_MODE=false
LOG_LEVEL=INFO

# Performance settings for production
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_REQUEST_TIMEOUT=60
DISCORD_LLM_TIMEOUT=90

# Feature flags for production
ENABLE_AUTO_FACTS=true
ENABLE_GLOBAL_FACTS=true
ENABLE_EMOTIONS=true

# Production monitoring
ANONYMIZED_TELEMETRY=false

# Job Scheduler Configuration (production settings)
JOB_SCHEDULER_ENABLED=true                    # Enable background jobs
JOB_SCHEDULER_CHECK_INTERVAL_SECONDS=30       # Standard interval for production
FOLLOW_UP_ENABLED=true                        # Enable follow-up messages
FOLLOW_UP_DEFAULT_DELAY_HOURS=48              # 2 days default delay
FOLLOW_UP_MAX_PER_USER_PER_WEEK=2            # Conservative limit for production
FOLLOW_UP_MIN_HOURS_BETWEEN=24               # Minimum 24 hours between follow-ups
CLEANUP_ENABLED=true                          # Enable automatic cleanup
CLEANUP_OLD_CONVERSATIONS_DAYS=30             # Keep conversations for 30 days
CLEANUP_TEMP_FILES_HOURS=24                   # Clean temp files daily
CLEANUP_FAILED_JOBS_DAYS=7                    # Keep failed jobs for 7 days


# Neo4j Graph Database Configuration
# Add these variables to your .env file

# === NEO4J CONFIGURATION ===
NEO4J_HOST=neo4j
NEO4J_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j_password_change_me
NEO4J_DATABASE=neo4j

# === GRAPH FEATURES ===
# Enable graph database features (set to false to disable)
ENABLE_GRAPH_DATABASE=true

# Initialize sample data for testing (set to false for production)
INIT_SAMPLE_DATA=false

# === SECURITY NOTES ===
# 1. Change NEO4J_PASSWORD to a strong password in production
# 2. Consider using Neo4j Enterprise for advanced security features
# 3. Restrict network access to Neo4j ports in production environments
# 4. Regular backup of graph data is recommended

# === PERFORMANCE TUNING ===
# These are set in docker-compose.yml but can be overridden:
# NEO4J_dbms_memory_heap_initial__size=512m
# NEO4J_dbms_memory_heap_max__size=1G
# NEO4J_dbms_memory_pagecache_size=512m
