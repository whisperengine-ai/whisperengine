# WhisperEngine Discord Bot Configuration
# Uses cloud APIs (OpenRouter) for scalable deployment

DEMO_BOT=true
BOT_SYSTEM_PROMPT_FILE=./prompts/dream_ai_enhanced.md
ADMIN_USER_IDS=672814231002939413

DISCORD_BOT_TOKEN=
DISCORD_BOT_NAME=Dream

LLM_SUPPORTS_VISION=true
LLM_VISION_MAX_IMAGES=3

# === DISCORD BOT: ALL CLOUD APIs ===
# Main conversation - OpenRouter GPT-4o
LLM_CHAT_API_URL=https://openrouter.ai/api/v1
LLM_CHAT_API_KEY=your_openrouter_api_key_here
LLM_CHAT_MODEL=openai/gpt-4o

# Fact extraction - OpenRouter GPT-3.5
LLM_FACTS_API_URL=https://openrouter.ai/api/v1
LLM_FACTS_API_KEY=your_openrouter_api_key_here
LLM_FACTS_MODEL=openai/gpt-3.5-turbo

# Emotion analysis - OpenRouter GPT-4o-mini
LLM_EMOTION_API_URL=https://openrouter.ai/api/v1
LLM_EMOTION_API_KEY=your_openrouter_api_key_here
LLM_EMOTION_MODEL=openai/gpt-4o-mini

# Embeddings - Local only (OpenRouter doesn't support embeddings)
USE_EXTERNAL_EMBEDDINGS=false
LLM_LOCAL_EMBEDDING_MODEL=all-mpnet-base-v2
FALLBACK_EMBEDDING_MODEL=all-mpnet-base-v2

# Database Configuration (Docker services)
REDIS_HOST=redis
REDIS_PORT=6379
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=whisper_engine
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=securepassword123
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Performance Settings
MAX_CONCURRENT_LLM_CALLS=2
ENABLE_PHASE3_MEMORY=true
ENABLE_EMOTIONAL_INTELLIGENCE=true

# Voice System
VOICE_SUPPORT_ENABLED=true
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_DEFAULT_VOICE_ID=ked1vRAQW5Sk9vhZC3vI
ELEVENLABS_VOICE_STABILITY=0.5
ELEVENLABS_VOICE_SIMILARITY_BOOST=0.8
VOICE_AUTO_JOIN=true
VOICE_RESPONSE_ENABLED=true
VOICE_LISTENING_ENABLED=true

ENABLE_GLOBAL_FACTS=true