# WhisperEngine Desktop App Configuration  
# Uses local models (llama-cpp-python) for privacy and offline capability

DEMO_BOT=true
BOT_SYSTEM_PROMPT_FILE=./prompts/dream_ai_enhanced.md
ADMIN_USER_IDS=672814231002939413

# Desktop app doesn't need Discord token
# DISCORD_BOT_TOKEN=not_needed_for_desktop
DISCORD_BOT_NAME=Dream

LLM_SUPPORTS_VISION=true
LLM_VISION_MAX_IMAGES=3

# === DESKTOP APP: LOCAL MODELS ===
# Main conversation - Local llama-cpp-python
LLM_CHAT_API_URL=llamacpp://local
LLM_CHAT_MODEL=local-model
LLAMACPP_MODEL_PATH=models/Phi-3-mini-4k-instruct-q4.gguf
LLAMACPP_CONTEXT_SIZE=4096
LLAMACPP_THREADS=4
LLAMACPP_USE_GPU=auto

# Fact extraction - Fallback to local or external as needed
LLM_FACTS_API_URL=llamacpp://local
LLM_FACTS_MODEL=local-model

# Emotion analysis - Can use local or external
LLM_EMOTION_API_URL=llamacpp://local  
LLM_EMOTION_MODEL=local-model

# External fallback (if needed)
LLM_CHAT_API_KEY=your_openrouter_api_key_here
LLM_FACTS_API_KEY=your_openrouter_api_key_here
LLM_EMOTION_API_KEY=your_openrouter_api_key_here

# Embeddings - Local models
USE_EXTERNAL_EMBEDDINGS=false
LLM_LOCAL_EMBEDDING_MODEL=all-mpnet-base-v2
FALLBACK_EMBEDDING_MODEL=all-mpnet-base-v2

# Database Configuration (Local SQLite for desktop)
# REDIS_HOST=localhost  # Desktop app can use local Redis if available
# POSTGRES_HOST=localhost  # Or local PostgreSQL
# For desktop, often uses SQLite instead
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# Performance Settings (more conservative for local)
MAX_CONCURRENT_LLM_CALLS=1
ENABLE_PHASE3_MEMORY=true
ENABLE_EMOTIONAL_INTELLIGENCE=true

# Voice System (optional for desktop)
VOICE_SUPPORT_ENABLED=false
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

ENABLE_GLOBAL_FACTS=true