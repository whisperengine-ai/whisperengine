# Development Environment Configuration
# For running bot code natively (outside containers)
# Note: Override settings in your personal .env file

# === DISCORD BOT CONFIGURATION ===
# DISCORD_BOT_TOKEN= # Set in your personal .env file

# Demo Bot Configuration (defaults to false for development)
DEMO_BOT=false

# LLM Configuration (Native execution - LM Studio/Ollama running on host)
LLM_CHAT_API_URL=http://host.docker.internal:1234/v1
LLM_MODEL_NAME=mistralai/mistral-nemo-instruct-2407
LLM_EMOTION_MODEL_NAME=google/gemma-3n-e4b
LLM_FACTS_MODEL_NAME=google/gemma-3n-e4b
LLM_EMBEDDING_MODEL_NAME=text-embedding-nomic-embed-text-v1.5

# External Embeddings Configuration
USE_EXTERNAL_EMBEDDINGS=true

# System Configuration
DEBUG_MODE=true
LOG_LEVEL=DEBUG

# Redis Configuration (connect to containerized service from host)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# PostgreSQL Configuration (connect to containerized service from Docker)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=whisper_engine
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=securepassword123
POSTGRES_MIN_CONNECTIONS=5
POSTGRES_MAX_CONNECTIONS=20
USE_POSTGRES_PROFILES=true

# ChromaDB Configuration (connect to containerized service from host)
USE_CHROMADB_HTTP=true
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=user_memories
CHROMADB_GLOBAL_COLLECTION_NAME=global_facts

# Neo4j Graph Database Configuration
# Add these variables to your .env file

# === NEO4J CONFIGURATION ===
NEO4J_HOST=neo4j
NEO4J_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j_password_change_me
NEO4J_DATABASE=neo4j

# === GRAPH FEATURES ===
# Enable graph database features (set to false to disable)
ENABLE_GRAPH_DATABASE=true

# Initialize sample data for testing (set to false for production)
INIT_SAMPLE_DATA=false

# === SECURITY NOTES ===
# 1. Change NEO4J_PASSWORD to a strong password in production
# 2. Consider using Neo4j Enterprise for advanced security features
# 3. Restrict network access to Neo4j ports in production environments
# 4. Regular backup of graph data is recommended

# === PERFORMANCE TUNING ===
# These are set in docker-compose.yml but can be overridden:
# NEO4J_dbms_memory_heap_initial__size=512m
# NEO4J_dbms_memory_heap_max__size=1G
# NEO4J_dbms_memory_pagecache_size=512m


VOICE_SUPPORT_ENABLED=true
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Disable local embedding models loading (prevents SentenceTransformer loading)
LOAD_FALLBACK_EMBEDDING_MODELS=false


# Performance settings for development
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_REQUEST_TIMEOUT=90
DISCORD_LLM_TIMEOUT=120

# Job Scheduler Configuration (for development/testing)
JOB_SCHEDULER_ENABLED=true                    # Enable for testing
JOB_SCHEDULER_CHECK_INTERVAL_SECONDS=10       # Check more frequently for development
FOLLOW_UP_ENABLED=true                        # Enable follow-ups for testing
FOLLOW_UP_DEFAULT_DELAY_HOURS=1               # Short delay for development testing
FOLLOW_UP_MAX_PER_USER_PER_WEEK=5            # More lenient for testing
CLEANUP_ENABLED=false                          # Test cleanup jobs
CLEANUP_OLD_CONVERSATIONS_DAYS=1              # Aggressive cleanup for development

# Feature flags for development
ENABLE_AUTO_FACTS=true
ENABLE_GLOBAL_FACTS=true
ENABLE_EMOTIONS=true

# Production monitoring
ANONYMIZED_TELEMETRY=false
