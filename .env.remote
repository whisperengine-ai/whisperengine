
DEMO_BOT=true

BOT_SYSTEM_PROMPT_FILE=./prompts/dream_ai_enhanced.md

ADMIN_USER_IDS=

DISCORD_BOT_TOKEN=
DISCORD_BOT_NAME=Dream

LLM_SUPPORTS_VISION=true    # Set to true if using vision model
LLM_VISION_MAX_IMAGES=3

# === OPENAI-COMPATIBLE LLM CONFIGURATION ===
# Mix and match different providers for different AI functions
# All endpoints must be OpenAI-compatible (OpenRouter, LM Studio, Ollama, etc.)

# === MAIN CHAT CONVERSATION ===
LLM_CHAT_API_URL=https://openrouter.ai/api/v1
LLM_CHAT_API_KEY=
LLM_CHAT_MODEL=openai/gpt-4o

# === FACT EXTRACTION ===
LLM_FACTS_API_URL=https://openrouter.ai/api/v1
LLM_FACTS_API_KEY=
LLM_FACTS_MODEL=openai/gpt-3.5-turbo

# === EMOTION ANALYSIS ===
LLM_EMOTION_API_URL=https://openrouter.ai/api/v1
LLM_EMOTION_API_KEY=
LLM_EMOTION_MODEL=openai/gpt-4o-mini

# External Embeddings Configuration
# Note: OpenRouter doesn't support embeddings API, using local embeddings instead
USE_EXTERNAL_EMBEDDINGS=false
# LLM_EMBEDDING_API_URL=https://api.openai.com/v1  # Use OpenAI directly for embeddings if needed
# LLM_EMBEDDING_API_KEY=your_openai_api_key_here
# LLM_EMBEDDING_MODEL=text-embedding-3-small

# Local Embedding Configuration (since OpenRouter doesn't support embeddings)
LLM_LOCAL_EMBEDDING_MODEL=all-mpnet-base-v2
FALLBACK_EMBEDDING_MODEL=all-mpnet-base-v2


# Database Configuration (Docker service names)
# For desktop app, disable PostgreSQL and use local storage
USE_POSTGRESQL=false
REDIS_HOST=redis
REDIS_PORT=6379
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=whisper_engine
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=securepassword123
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Neo4j Graph Database (optional)
ENABLE_GRAPH_DATABASE=false
NEO4J_HOST=neo4j
NEO4J_PORT=7687
NEO4J_USERNAME=neo4j

# Performance Optimizations
ENABLE_FACT_EXTRACTION=false
ENABLE_AUTO_FACTS=false
ENABLE_PHASE4_HUMAN_LIKE=false
ENABLE_PHASE3_BACKGROUND=true
MAX_CONCURRENT_LLM_CALLS=2
MEMORY_RETRIEVAL_LIMIT=10
CONVERSATION_CACHE_SIZE=100
ENABLE_PHASE3_MEMORY=false
ENABLE_SEMANTIC_CLUSTERING=false

# Phase 3 Performance Limits
PHASE3_MAX_MEMORIES=20
PHASE3_MEMORY_STRATEGY=recent_important
PHASE3_ANALYSIS_TIMEOUT=30

# Semantic Clustering Limits  
SEMANTIC_CLUSTERING_MAX_MEMORIES=15
SEMANTIC_CLUSTERING_TIMEOUT=20

NEO4J_PASSWORD=neo4j_password_change_me


# Voice System
VOICE_SUPPORT_ENABLED=true

# ElevenLabs API
ELEVENLABS_API_KEY=                         # Your ElevenLabs API key
ELEVENLABS_DEFAULT_VOICE_ID=ked1vRAQW5Sk9vhZC3vI # Updated default voice
ELEVENLABS_VOICE_STABILITY=0.5              # 0.0-1.0
ELEVENLABS_VOICE_SIMILARITY_BOOST=0.8       # 0.0-1.0
ELEVENLABS_VOICE_STYLE=0.0                  # 0.0-1.0, most natural
ELEVENLABS_USE_SPEAKER_BOOST=true

# Voice Behavior
VOICE_AUTO_JOIN=true
VOICE_RESPONSE_ENABLED=true
VOICE_LISTENING_ENABLED=true
VOICE_STREAMING_ENABLED=true
VOICE_MAX_RESPONSE_LENGTH=8192               # characters
VOICE_MAX_AUDIO_LENGTH=500                   # seconds
VOICE_RESPONSE_DELAY=1.0                    # seconds

# Voice Connection Management
VOICE_JOIN_ANNOUNCEMENTS=false
VOICE_KEEPALIVE_INTERVAL=300                # 5 minutes
VOICE_HEARTBEAT_INTERVAL=30                 # seconds
VOICE_MAX_RECONNECT_ATTEMPTS=3
VOICE_RECONNECT_DELAY=5.0                   # seconds

ENABLE_GLOBAL_FACTS=true
LLAMACPP_MODEL_PATH=models/Phi-3-mini-4k-instruct-q4.gguf
